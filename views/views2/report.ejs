<%- include('header.html') -%>



    <div class="box-2">
        
        <div class="btn btn-two">
            <span><button id="myBtn"> <b>REPORT</b></button></span>
        </div>
    

      </div>





    <div id="myModal" class="modal">
        
        <div class="modal-content">
         
         
            <span class="close">&times;</span>
            <div style="height: 100%; overflow: scroll; width: 100%;">
            <table id="liste" >
                <tr>
                    <td>No</td>
                    <th>Temperature</th>
                    <th>Humidity</th>
                    <th>Position</th>
                    <th>Date</th>
                    
                  
                    
                </tr>
            </table>
            </div>
            
        </div>
      </div>


<script>




$("#myBtn").click(function(){
    
    $.getJSON("views2/sensors.json",function (data){
        

        for (let i = 0; i <50000; i++) {
            let satir=$("<tr>") //<tr> elementi oluşturur
            let hucre1=$("<td>").text(i)
            let hucre2=$("<td>").text(data["sensors"]["0000"][i]["temperature"])
            let hucre3=$("<td>").text(data["sensors"]["0000"][i]["humidity"])
            let hucre4=$("<td>").text(data["sensors"]["0000"][i]["position"])
            let hucre5=$("<td>").text(data["sensors"]["0000"][i]["_date"])
            
      
                    
            satir.append(hucre1) //hücre1 i satir içine ekler
            satir.append(hucre2) //hücre2 yi satir içine ekler
            satir.append(hucre3)//hücre3 ü satir içine ekler
            satir.append(hucre4) //hücre1 i satir içine ekler
            satir.append(hucre5) //hücre2 yi satir içine ekler
            

            $("#liste").append(satir) 



}
          
    })
})




</script>


<script>
// Popup Al
var modal = document.getElementById('myModal');

// Kipi açan düğmeyi al
var btn = document.getElementById("myBtn");

// Kipi kapatan <span> öğesini edinin
var span = document.getElementsByClassName("close")[0];

// Kullanıcı düğmeyi tıklattığında
btn.onclick = function() {
modal.style.display = "block";
}

// Kullanıcı <span> (x) düğmesini tıkladığında, popup
span.onclick = function() {
modal.style.display = "none";
}

// Kullanıcı modelden başka herhangi bir yeri tıklattıysa, onu kapatın.
window.onclick = function(event) {
if (event.target == modal) {
    modal.style.display = "none";
}
}
</script>
